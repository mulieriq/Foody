<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="customeChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
    <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>

    <style name="DetailsActivityStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="background">@color/actionBarBackgroundColor</item>
        <item name="tabIndicator">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>

    </style>

    <style name="customTabTextColor" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>